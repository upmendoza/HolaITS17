<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
					 android:orientation="vertical"
					 android:layout_width="match_parent"
					 android:layout_height="match_parent" android:padding="20dp" android:id="@+id/login">

	 <TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:text="Inicio de Sesion"
				android:id="@+id/textView4" android:layout_gravity="center_horizontal" android:textSize="35dp"
				android:autoText="false" android:linksClickable="false"
				android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
	 <TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:text="Usuario:"
				android:id="@+id/textView2"
				android:layout_marginTop="53dp" android:layout_below="@+id/textView4"
				android:layout_alignParentLeft="true"/>
	 <EditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:inputType="textPersonName"
				android:ems="10"
				android:id="@+id/etUsuario" android:hint="Nombre de Usuario"
				android:layout_below="@+id/textView2" android:layout_alignParentLeft="true"/>
	 <TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:text="Contraseña:"
				android:id="@+id/textView3"
				android:layout_below="@+id/etUsuario" android:layout_alignParentLeft="true"/>
	 <EditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:inputType="textPassword"
				android:ems="10"
				android:id="@+id/etPass" android:hint="Contraseña"
				android:layout_below="@+id/textView3" android:layout_alignParentLeft="true"/>
	 <Button
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="Iniciar sesion"
				android:id="@+id/btIniciar" android:layout_gravity="center_horizontal"
				android:layout_marginTop="51dp" android:layout_below="@+id/etPass" android:layout_alignParentRight="true"/>
	 <TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:text="Registrar"
				android:id="@+id/txtRegistrar"
				android:linksClickable="true"
				android:layout_below="@+id/btIniciar" android:layout_centerHorizontal="true"/>
</RelativeLayout>